<div class="ui segment">
<div class="ui form">


<center><H1> Contact Us  <i class="envelope outline icon"></i></H1>
<p> We'd love to hear your suggestions and feedback </p></center>


	<%= form_for @contact do |f| %>



		<div class="field">
	  <%= f.label :name %><br>
		<%= f.text_field :name, required: true  %>
		</div>


		<div class="field">
	  <%= f.label :email %><br>
		<%= f.email_field :email, required: true %>
			</div>


  	<div class="field">
		<%= f.label :message %><br>
		<%= f.text_area :message, as: :text %>
		</div>



		<center>
<%= f.submit 'Send Message', class: "ui primary button" %></center>
	<% end %>
	</div>
	</div>
